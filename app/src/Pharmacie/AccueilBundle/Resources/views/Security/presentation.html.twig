	        <div class="carousel-inner">
	            <div class="item active">
	                <img class="slide-image" src="{{ app.request.schemeAndHttpHost ~ asset('bundles/pharmacieaccueil/images/test.jpg') }}" alt="">
	            </div>
	            <div class="item">
	                <img class="slide-image" src="{{ app.request.schemeAndHttpHost ~ asset('bundles/pharmacieaccueil/images/Pharmacie.jpg') }}" alt="">
