{% extends "PharmacieStockBundle:Categorie:lister.html.twig" %}
{% block table %}
	<center><h4 class="panel-heading alert-danger">Listes des produits de la catégorie : {{ categorie.libelle }} </h4></center>
            <hr class="colorgraph">
        <div class="table-responsive">
            <table id="mytable" class="table table-bordered table-striped table-hover ">
                <thead>
                    <th>Identifiant</th>
                    <th>Libellé</th>
                    <th>Code barre</th>
                    <th>Référence</th>
                    <th>Fonctions</th>
                </thead>
                <tbody>
                    {% for tag in produit %}
                         <tr>
                            <td>{{ tag.id}}</td>
                            <td>{{ tag.libelle}}</td>
                            <td>{{ tag.codeBarre}}</td>
                            
                            <td>{{ tag.reference}}</td>
                            <td>
                                <a href="{{ path('gestion_stock_categorie_produit', { 'id': tag.id }) }}"><button class="btn btn-info btn-xs"><span class="glyphicon glyphicon-eye-open"></span></button></a>
                                {% if is_granted("ROLE_ADMIN") %}
                                    <a href="{{ path('gestion_stock_categorie_modifier', { 'id': tag.id }) }}"><button class="btn btn-success btn-xs"><span class="glyphicon glyphicon-list-alt"></span></button></a>
                                    <a href="{{ path('gestion_stock_categorie_supprimer', { 'id': tag.id }) }}" data-confirm="Vous êtes sur le point de supprimer la catégorie {{tag.libelle}}. Etes-vous sûr de bien vouloir effectué cette opération ?"><button class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span></button></a>
                                {% endif %}

                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>	
{% endblock %}
